---
import { AstroSeo } from '@astrolib/seo';
import { SITE } from '~/config.mjs';
import Fonts from '@atoms/Fonts.astro';

const {
	title = SITE.name,
	description = SITE.name,
	canonical = Astro.url.toString(),
	noindex = false,
	nofollow = false,
	ogTitle = SITE.title,
	ogType = 'website',
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" href="/favicon.ico" sizes="any" type="image/ico" />

<Fonts />

<AstroSeo
	title={title}
	description={description}
	canonical={}
	noindex={noindex}
	nofollow={nofollow}
	openGraph={{
		url: canonical,
		title: ogTitle,
		description: description,
		type: ogType,
	}}
/>
