---
import { AstroSeo } from '@astrolib/seo';
// import { GoogleAnalytics } from '@astrolib/analytics';

import { SITE } from '~/config.mjs';
import Fonts from '@atoms/Fonts.astro';

const {
	title = SITE.name,
	description = '',
	canonical,
	noindex = false,
	nofollow = false,
	ogTitle = title,
	ogType = 'website',
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" href="/favicon.ico" sizes="any" type="image/svg+xml" />

<Fonts />

<AstroSeo
	title={title}
	description={description}
	canonical={canonical}
	noindex={noindex}
	nofollow={nofollow}
	openGraph={{
		url: canonical,
		title: ogTitle,
		description: description,
		type: ogType,
		// image: image,
		// site_name: 'SiteName',
	}}
	twitter={{
		// handle: '@handle',
		// site: '@site',
		// cardType: image,
	}}
/>

