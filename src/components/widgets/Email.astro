---
import { Icon } from 'astro-icon';

type Props = {
	email: string;
};

const { email } = Astro.props as Props;
---

<div class="fixed bottom-0 right-6 w-12 z-10">
	<div class="flex flex-col items-center gap-8">
		<a href={`mailto:${email}`} class="text-wm-accent">
			<Icon class="w-6 h-6 mb-2 rotate-90" name="ic:round-alternate-email" />
			<span class="[writing-mode:vertical-rl] font-mono">
				{email}
			</span>
		</a>
		<span class="w-[1px] h-36 bg-wm-accent"></span>
	</div>
</div>
