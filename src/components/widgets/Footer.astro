---
import { Icon } from 'astro-icon';

type ToolProp = { name: string; icon: string; link?: string };

const tools: ToolProp[] = [
	{ name: 'Astro', icon: 'simple-icons:astro', link: 'https://astro.build/' },
	{ name: 'React', icon: 'simple-icons:react', link: 'https://reactjs.org/' },
	{ name: 'Tailwind', icon: 'simple-icons:tailwindcss', link: 'https://tailwindcss.com/' },
	{ name: 'Amor', icon: 'ant-design:heart-filled' },
];
---

<div class="relative">
	<footer class="mx-0 px-4 sm:mx-24 sm:px-8 text-wm-platinum">
		<section class="credits py-4 text-center">
			Feito por
			<a
				class="relative after:absolute"
				href="https://github.com/wbmagalhaes/wbmagalhaes.github.io"
				target="_blank"
			>
				William Magalhães
			</a>
			. Baseado no portifólio de
			<a class="relative after:absolute" href="https://github.com/bchiang7/v4" target="_blank">
				Brittany Chiang
			</a>
		</section>

		<section class="py-2 border-t border-wm-carbon-400">
			<div class="tool-list flex flex-row flex-wrap gap-4 justify-center text-sm sm:text-base font-mono">
				{
					tools.map(({ name, icon, link }) => {
						return (
							<a class="relative after:absolute" href={link} target="_blank">
								<div class="inline-flex align-text-bottom">
									<Icon class="w-4 h-4 sm:w-5 sm:h-5" name={icon} />
								</div>
								{name}
							</a>
						);
					})
				}
			</div>
		</section>
	</footer>
</div>
