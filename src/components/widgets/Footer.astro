	<footer class="mx-4 md:mx-16 rounded-t-2xl bg-wm-primary shadow-lg px-2 sm:px-4">
		<section>
			<div class="circles flex justify-center sm:justify-between px-2 sm:px-4 py-6">
				<div class="hidden sm:flex place-items-center">
					<div class="w-1 h-1"></div>
					<div class="w-2 h-2"></div>
					<div class="w-1 h-1"></div>
					<div class="w-12 h-1"></div>
					<div class="w-2 h-2"></div>
				</div>
				<div class="flex place-items-center">
