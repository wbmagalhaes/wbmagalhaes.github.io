---
import HomeSection from '@common/HomeSection/HomeSection.astro';
import { getEntry } from 'astro:content';

import { getWorks } from '@services/myData';

import { components } from '@common/mdx/Components.astro';

const work = getWorks();
const entry = await getEntry('home', 'experience');
const { Content } = await entry.render();
---

<HomeSection id='experience' class='bg-blue-200'>
  <Fragment slot='title'>{entry.data.title}</Fragment>

  <Fragment>
    <Content components={components} />
    <!-- <WorkTabs list={work} client:idle /> -->
  </Fragment>
</HomeSection>
