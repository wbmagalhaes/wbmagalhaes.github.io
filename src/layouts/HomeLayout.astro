---
import Layout from '@layouts/BaseLayout.astro';
import type { MetaSEO } from 'types/metaseo';

import { Icon } from 'astro-icon/components';
import SocialsBanner from '@widgets/Home/SocialsBanner';
import EmailBanner from '@widgets/Home/EmailBanner';

import { getEmail, getSocials } from '@services/myData';

const email = getEmail();
const socials = getSocials();

type Props = {
  meta?: MetaSEO;
};

const { meta } = Astro.props as Props;
---

<Layout meta={meta}>
  <SocialsBanner socials={socials} client:idle />

  <EmailBanner email={email} client:idle>
    <Icon slot='icon' class='w-6 h-6' name='ic:outline-email' />
  </EmailBanner>

  <slot />
</Layout>
