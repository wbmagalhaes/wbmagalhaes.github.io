---
import { Icon } from 'astro-icon';
import Layout from '@layouts/BaseLayout.astro';
import Socials from '@widgets/Home/Socials';
import Email from '@widgets/Home/Email';

import { getEmail, getSocials } from '@services/my_info';

const email = getEmail();
const socials = getSocials();
---

<Layout>
	<Socials socials={socials} client:idle />

	<Email email={email} client:idle>
		<Icon slot="icon" name="ic:round-alternate-email" />
	</Email>

	<div class="flex flex-col px-4 md:px-0 mx-0 sm:mx-8 md:mx-24 lg:mx-32 xl:mx-64 transition-all duration-300">
		<slot />
	</div>
</Layout>
