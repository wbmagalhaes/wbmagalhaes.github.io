---
import '@styles/projects.scss';

import Layout from '@layouts/BaseLayout.astro';
import type MetaSEO from 'types/metaseo';

type Props = {
	meta?: MetaSEO;
	title: string;
};

const { meta, title } = Astro.props as Props;
---

<link
	rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css"
	integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC"
	crossorigin="anonymous"
/>

<Layout meta={meta}>
	<section class="px-4 md:px-0 mx-0 sm:mx-4 md:mx-12 lg:mx-16 xl:mx-32 transition-all duration-300">
		<h1 class="font-mono font-bold border-b-2 border-wm-oxygen-400">{title}</h1>
		<article class="project my-6 text-justify min-h-screen mb-32">
			<slot />
		</article>
	</section>
</Layout>
