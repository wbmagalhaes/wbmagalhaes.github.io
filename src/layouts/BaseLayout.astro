---
import '@styles/global.scss';

import MetaTags from '@core/MetaTags.astro';
import Header from '@widgets/Header';
import Footer from '@widgets/Footer.astro';
import Scripts from '@core/Scripts.astro';

const { meta = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="ptbr" class="motion-safe:scroll-smooth 2xl:text-5">
	<head>
		<MetaTags {...meta} />
	</head>

	<body class="antialiased bg-wm-primary-800 text-wm-carbon align-middle">
		<Header client:load />

		<main class="overflow-x-hidden min-h-screen">
			<slot />
		</main>

		<Footer />
		<Scripts />
	</body>
</html>
